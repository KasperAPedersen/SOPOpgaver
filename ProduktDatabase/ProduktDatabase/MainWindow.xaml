<Window x:Class="ProduktDatabase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProduktDatabase"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button Content="Ny produkt" HorizontalAlignment="Left" Height="40" Margin="10,10,0,0" VerticalAlignment="Top" Width="115" Click="Button_Click"/>
        <Button Content="Slet produkt" HorizontalAlignment="Left" Height="40" Margin="250,10,0,0" VerticalAlignment="Top" Width="115" Click="Button_Click_2"/>
        <Button Content="Rediger produkt" HorizontalAlignment="Left" Height="40" Margin="130,10,0,0" VerticalAlignment="Top" Width="115" Click="Button_Click_1"/>
        <DataGrid Name="myDataGrid" HorizontalAlignment="Center" Height="369" Margin="0,55,0,0" VerticalAlignment="Top" Width="780" d:ItemsSource="{d:SampleData ItemCount=5}" SelectionChanged="DataGrid_SelectionChanged_1"/>
    </Grid>
</Window>
